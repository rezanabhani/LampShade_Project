@section Scripts {

    <script type="text/javascript">


        const circles = document.querySelectorAll('.circle circle');
        document.addEventListener('DOMContentLoaded', function () {
            const defaultPrice = document.getElementById('myPrice');
            if (defaultPrice) {
                const dataValue = defaultPrice.getAttribute('data-pricetomoney');
                const outputPrice = document.getElementById('pricemain');
                if (outputPrice) {
                    outputPrice.textContent = dataValue;
                }

                const dataDiscountPrice = defaultPrice.getAttribute('data-discountpricemain');
                const outputDiscountPrice = document.getElementById('discountmain');
                if (outputDiscountPrice) {
                    outputDiscountPrice.textContent = dataDiscountPrice;
                }


                // Set the blue border on the first circle by default
                if (circles.length > 0) {
                    circles[0].classList.add('blue-border');
                }


                circles.forEach(circle => {
                    circle.addEventListener('click', function () {
                        // Remove the blue border from all circles
                        circles.forEach(c => c.classList.remove('blue-border'));

                        // Add the blue border to the clicked circle
                        this.classList.add('blue-border');
                    });
                });
            }
        });



        let price = document.getElementById('parent-list');
        price.addEventListener('click', function (e) {
            if (e.target.tagName === 'circle') {
                const UnitPrice = e.target.getAttribute('data-price');
                const UnitPriceToMoney = e.target.getAttribute('data-pricetomoney');
                const ProductColor = e.target.getAttribute('data-fill');

                // Update the data attributes of the "افزودن به سبد خرید" button
                const cartButton = document.querySelector('.cart-btn');
                cartButton.setAttribute('data-price', UnitPrice);
                cartButton.setAttribute('data-colorname', ProductColor);


                // Update the displayed price and discount if needed
                let pricemain = document.getElementById("pricemain");
                let discountmain = document.getElementById("discountmain");
                if (UnitPriceToMoney) {
                    pricemain.textContent = UnitPriceToMoney;
                    discountmain.textContent = dataDiscountPrice; // You'll need to retrieve this value from your data source.
                }

                event.preventDefault();
            }
        });



    </script>


